# Prisma AIRS Configuration
AIRS_API_URL=https://service.api.aisecurity.paloaltonetworks.com
AIRS_API_KEY=your-api-key-here

# AIRS Default Profile Configuration (optional)
# AIRS_DEFAULT_PROFILE_ID=your-profile-id
AIRS_DEFAULT_PROFILE_NAME=Prisma AIRS

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# MCP Configuration
MCP_SERVER_NAME=prisma-airs-mcp
MCP_SERVER_VERSION=1.0.4

# Optional Monitoring Configuration (Sentry)
# Set MONITORING_ENABLED=true and provide SENTRY_DSN to enable monitoring
MONITORING_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=
SENTRY_SERVER_NAME=
# Privacy settings - defaults to false for maximum privacy
SENTRY_SEND_DEFAULT_PII=false